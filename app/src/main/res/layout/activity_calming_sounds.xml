<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_16dp"
    tools:context=".CalmingSoundsActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/ib_arrow_calm"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_marginTop="@dimen/_3dp"
                android:background="@color/white"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tv_calming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/calming_sounds"
                android:textColor="@color/black"
                android:textSize="@dimen/_25sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_yoga_calm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30dp"
            android:layout_marginTop="@dimen/_35dp"
            android:src="@drawable/black_yoga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/tv_calm_sound"
            android:layout_width="202dp"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/_58dp"
            android:text="@string/calming_desc"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp"
            app:layout_constraintStart_toEndOf="@+id/iv_yoga_calm"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_calm1"
            android:layout_width="303dp"
            android:layout_height="79dp"
            android:layout_marginTop="44dp"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="@dimen/_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_yoga_calm">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_10dp"
                android:src="@drawable/calm_pic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_250dp"
                android:layout_marginTop="@dimen/_20dp"
                android:src="@drawable/play" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_calm2"
            android:layout_width="303dp"
            android:layout_height="79dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="@dimen/_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_calm1">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_10dp"
                android:src="@drawable/calm_pic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_250dp"
                android:layout_marginTop="@dimen/_20dp"
                android:src="@drawable/play" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_calm3"
            android:layout_width="303dp"
            android:layout_height="79dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="@dimen/_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_calm2">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_10dp"
                android:src="@drawable/calm_pic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_250dp"
                android:layout_marginTop="@dimen/_20dp"
                android:src="@drawable/play" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_calm4"
            android:layout_width="303dp"
            android:layout_height="79dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="@dimen/_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_calm3">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_10dp"
                android:src="@drawable/calm_pic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_250dp"
                android:layout_marginTop="@dimen/_20dp"
                android:src="@drawable/play" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_calm5"
            android:layout_width="303dp"
            android:layout_height="79dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="@dimen/_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_calm4">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_10dp"
                android:src="@drawable/calm_pic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_250dp"
                android:layout_marginTop="@dimen/_20dp"
                android:src="@drawable/play" />

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>